#include <stdio.h>

 int main() {

    int id1;
    int id2;
    int id3;
    int soma;

    printf("Insira a idade da primeira pessoa");
    scanf ("%d", &id1);

     printf("Insira a idade da segunda pessoa");
     scanf ("%d", &id2);

     printf("Insira a idade da terceira pessoa");
     scanf ("%d", &id3);

     soma = id1+id2+id3;

    if(soma > 100)
     {
         printf("Maior ou igual a 100");
     }
    else
     {

     printf("Menor que 100");

     }


     return 0;
}
